    "@biomejs/biome": "^2.3.15",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "citty": "^0.2.1",
    "zod": "^4.3.6"
  }
}
